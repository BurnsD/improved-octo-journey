    <main>
      {{{ body }}}
    </main>
    <footer class="footer">
      <div class="rights flex-row">
        <h4 class="text-gray">
          Copyright Â©2022 <a class="social-list__link" href="https://github.com/BurnsD">
            <i class="fab fa-github"></i>
          </a>
